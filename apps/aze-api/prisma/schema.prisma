generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid(7))
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductCategory {
  id   Int    @id @default(autoincrement())
  name String @unique
  products Product[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String @id @default(uuid(7))
  name        String
  description String?
  price       Float
  categoryId  Int @unique
  category    ProductCategory @relation(fields: [categoryId], references: [id])
  reviews     Review[]
  tags        Tag[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id        String   @id @default(uuid(7))
  rating    Int      // 1 to 5 typically
  comment   String?
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}

model Tag {
  id        String       @id @default(uuid(7))
  name      String       @unique
  products  Product[]    // Many-to-many via join table
}

